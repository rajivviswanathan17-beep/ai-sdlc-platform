{
  "name": "ai-sdlc-backend",
  "version": "1.0.0",
  "description": "Backend API server for AI-driven SDLC collaboration platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:watch": "nodemon --watch src --ext js,ts --exec \"npm run dev\"",
    "build": "echo 'Building backend...'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ai": "jest --testPathPattern=ai",
    "test:integration": "jest --testPathPattern=integration",
    "test:db": "jest --testPathPattern=database",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "type-check": "echo 'Type checking JavaScript...'",
    "db:migrate": "node src/scripts/migrate.js",
    "db:seed": "node src/scripts/seed.js",
    "db:reset": "node src/scripts/reset.js",
    "seed:sample-data": "node src/scripts/seed-sample-data.js",
    "seed:demo-users": "node src/scripts/seed-demo-users.js"
  },
  "keywords": [
    "ai",
    "sdlc",
    "collaboration",
    "prd",
    "requirements",
    "user-stories"
  ],
  "author": "AI-SDLC Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "openai": "^4.12.4",
    "@anthropic-ai/sdk": "^0.6.0",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "rate-limiter-flexible": "^3.0.8",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.49.0",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}